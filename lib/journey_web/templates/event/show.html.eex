<h1>Show Event</h1>

<ul>
  <li>
    <strong>Name:</strong>
    <%= @event.name %>
  </li>
  <li>
    <strong>Photo:</strong>
    <%= img_tag(Journey.Photo.url({@event.photo, @event})) %>
  </li>
</ul>

<span><%= link "Edit", to: Routes.event_path(@conn, :edit, @event) %></span>
<span><%= link "Back", to: Routes.event_path(@conn, :index) %></span>
